<!DOCTYPE html>
<html>
<head>
  <title>Webphusion</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="nav">
		<% if current_user%>
		<ul>
			<li><%= link_to "Logout", logout_path %></li>
			<li><%= link_to "Meine Daten bearbeiten", edit_user_path(current_user) %></li>
		<ul>
		<% else %>
		<%= link_to "Login", login_path %>
		<% end %>
	</div>
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>
	<%= yield %>

</body>
</html>
