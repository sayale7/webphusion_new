<h1><%= t('theme.new') %></h1>

<div class='simple_form'>
	<%= simple_form_for @theme do |f| %>  
			<%= f.error_notification %>
		  <%= f.input :account_id, :as => :hidden, :input_html => { :value => current_user.account.id }  %>
	    <%= f.input :name %>  
	    <%= f.input :public, :as => :boolean %>
			<%= f.submit t('theme.create') %>
	<% end %>
</div>